<div class = "edit_item_form">
  <h3>Edit <%= @item.name %></h3>
  <%= form_with model:[@item.merchant, @item], local: true do |f| %>
    <%= f.label "name"%>
    <%= f.text_field :name, id: :name %>

    <%= f.label "description"%>
    <%= f.text_field :description, id: :description %>

    <%= f.label "unit_price"%>
    <%= f.text_field :unit_price, id: :unit_price %>

    <%= f.submit "Submit" %>
  <% end %>
</div>
