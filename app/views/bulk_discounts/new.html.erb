<div class="new_discount_form">
  <h3>Create New Discount</h3>
  <%= form_with url: "/merchants/#{@merchant.id}/bulk_discounts", method: :post, local: true do |f|%>
    <%= f.label "name" %>
    <%= f.text_field :name %>

    <%= f.label "percentage" %>
    <%= f.number_field :percentage %>

    <%= f.label "threshold" %>
    <%= f.number_field :threshold %>

    <%= f.submit "Submit" %>
  <% end %>
</div>
