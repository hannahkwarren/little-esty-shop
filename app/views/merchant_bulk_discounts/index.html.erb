<% @bulk_discounts.each do |discount| %>
    <div class="bulk-discount-<%= discount.id %>" >
    <h4><%= link_to "Bulk Discount, ID: #{discount.id}", "/merchants/#{discount.merchant.id}/bulk_discounts/#{discount.id}" %></h4>
    <p>Percentage: <%= discount.percentage %></p>
    <p>Quantity Threshold: <%= discount.quantity %></p>
    <% end %>


</div>

<%= link_to "Create New Bulk Discount", "/merchants/#{@bulk_discounts.first.merchant.id}/bulk_discounts/new" %>
